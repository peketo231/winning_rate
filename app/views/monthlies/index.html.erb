<div class="chart-wrapper">
    <canvas id="primaryChart" height="300"></canvas>
    <canvas id="secondaryChart" height="300"></canvas>
</div>
<script>
var ctx = document.getElementById('primaryChart').getContext('2d');
var primaryChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: <%= @data.map {|d|d.to_s + '月'}.to_json.html_safe %>,
        datasets: [{
            label: 'Rate',
            data: <%= @data.map {|d|@month.where(month: d).order(created_at: :desc).limit(1).pluck(:rate)}.flatten %>
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});

var ctx = document.getElementById('secondaryChart').getContext('2d');
var secondaryChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: <%= @data.map {|d|d.to_s + '月'}.to_json.html_safe %>,
        datasets: [{
            label: '勝率',
            data: <%= @data.map {|d|@month.where(month: d).order(created_at: :desc).limit(1).pluck(:win_rate)}.flatten %>
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    min: 0,
                    max: 100
                }
            }]
        }
    }
});
</script>
