<% content_for(:title, t('.title')) %>
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
            <h5 class="text-center mt-5">Twitterでログイン</h5>
            <div class="text-center mt-4">
                <%= link_to (t 'defaults.login'), auth_at_provider_path(provider: :twitter), class: 'btn btn-primary'%>
            </div>
            <p class="or mt-5">または</p>
            <h5 class="text-center my-5">メールアドレスでログイン</h5>
            <%= form_with url: login_path, local: true do |f| %>
                <div class="form-group">
                    <%= f.label :email, User.human_attribute_name(:email) %>
                    <%= f.text_field :email, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :password, User.human_attribute_name(:password) %>
                    <%= f.password_field :password, class: 'form-control' %>
                </div>
                <div class="actions">
                    <%= f.submit (t 'defaults.login'), class: 'btn btn-secondary btn-block mb-3' %>
                </div>
            <% end %>
            <div class='text-center'>
                <%= link_to (t '.to_register_page'), new_user_path %>
            </div>
            <div class='text-center'>
                <%= link_to (t '.password_forget'), new_password_reset_path %>
            </div>
        </div>
    </div>
</div>
