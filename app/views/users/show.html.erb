<% content_for(:title, t('.title')) %>
<div class="container">
    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <h2 class="text-center my-5"><%= t('.title') %></h2>
            <table class="table text-center">
                <tr>
                    <th><%= t(User.human_attribute_name(:email)) %></th>
                </tr>
                <tr>
                    <td><%= current_user.email %></td>
                </tr>
                <tr>
                    <td><%= link_to t('defaults.edit'), edit_user_path, class: 'btn btn-secondary' %></td>
                </tr>
            </table>
            <div class="border-bottom my-5"></div>
            <div class='text-center'>
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteAccount">退会</button>
            </div>
            <div class="modal fade" id="deleteAccount" tabindex="-1" role="dialog" aria-labelledby="deleteAccountLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteAccountLabel">退会確認画面</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">退会してもよろしいですか？</div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">キャンセル</button>
                            <%= link_to (t '.delete_account'), user_path(current_user), method: :delete, class: 'btn btn-danger' %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>