<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
            <%= form_with model: @battle_record, local: true do |f| %>
                <div class="form-group d-inline-flex flex-column">
                    <%= f.label :title %>
                    <%= f.collection_select :winning_eleven_id, WinningEleven.past, :id, :title, prompt: "選択してください" %>
                </div>
                <div class="form-group">
                    <%= f.label :rate %>
                    <%= f.text_field :rate, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :win_rate %>
                    <%= f.text_field :win_rate, class: 'form-control' %>
                </div>
                <%= f.submit (t 'defaults.register'), class: 'btn btn-primary' %>
            <% end %>
        </div>
    </div>
</div>